<% if @user.errors.any? %>
<div class="notification is-warning">
  <button class="delete"></button>
  <div class="">
    <h3 class="subtitle is-3"><i class="fas fa-exclamation-circle"></i> The form contains <%= pluralize(@user.errors.count, "error") %>.</h3>
  </div>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
