<article class="media" id="micropost-<%= micropost.id %>">
  <figure class="media-left">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  </figure>
  <div class="media-content">
    <div class="content">
      <p>
        <span class="user"><strong><%= link_to micropost.user.name, micropost.user %></strong></span>
        <br>
        <span class="content"><%= micropost.content %></span>
        <br>
        <figure class="">
          <%= image_tag micropost.picture.url if micropost.picture? %>
        </figure>
        <span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago.
          <% if current_user?(micropost.user) %>
          <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: "button is-danger is-outlined is-small" %>
          <% end %>
        </span>
      </p>
    </div>
  </div>
</article>
