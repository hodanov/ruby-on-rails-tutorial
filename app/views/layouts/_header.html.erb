      </a>
    </div>
    <div class="navbar-menu">
      <div class="navbar-end">

        <%= link_to(root_path, class: "navbar-item") do %>
        <span class="icon has-text-primary"><i class="fas fa-home"></i></span>
        <span>Home</span>
        <% end %>

        <%= link_to(about_path, class: "navbar-item") do %>
        <span class="icon has-text-success"><i class="fas fa-info-circle"></i></span>
        <span>About</span>
        <% end %>

        <%= link_to(help_path, class: "navbar-item") do %>
        <span class="icon has-text-info"><i class="fas fa-question-circle"></i></span>
